<h1>{{title}}</h1>
{{# if products }}
    <div class="cart page">
        <ul class="list-group">
            {{# each products }}
            <li class="list-group-item clearfix">
                <div class="col-xs-5">
                    <strong>{{ this.item.title }}</strong><br/>
                    <em>{{{this.item.description}}}</em>
                </div>
                <div class="col-xs-2 text-right">
                    <span class="badge">{{ this.quantity }}</span>
                </div>
                <div class="col-xs-3 text-right">
                    {{ this.price }} TL
                </div>
                <div class="col-xs-2 text-right">
                    <a href="/remove/{{this.item.id}}" class="btn btn-default"></i> Kaldır</a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong>Toplam: {{ totalPrice }} TL</strong>
    </div>
    <hr>
    {{#if session.loggedin}}
    <div class="text-right">
        <a href="/onay" type="button" class="btn btn-success">Siparişi Tamamla</a>
    </div>
    {{else}}
    <div class="text-right"></div>
        <a href="/login"type="button" class="btn btn-success"> Siparişi Tamamlamak Önce Giriş Yapın</a>
    </div>
    {{/if}}
{{ else }}
    Sepetiniz Boş Lütfen Ürün Ekleyiniz.
{{/if}}
